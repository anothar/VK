<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkAPI.Controls"
             xmlns:Controls="clr-namespace:VkAPI.Controls" x:Class="VkAPI.Controls.ctrLink"
             mc:Ignorable="d" 
             Height="auto" MinWidth="380">
    <Grid MouseLeftButtonDown="click_MouseLeftButtonDown">
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Grid.Row="0" x:Name="photo" Height="auto" Width="auto" Margin="5" MouseLeftButtonDown="click_MouseLeftButtonDown"/>
        <StackPanel Grid.Column="1" Grid.Row="0" Margin="0, 5, 5, 5">
            <TextBlock x:Name="title" Margin="5,0,5,3" TextWrapping="Wrap" FontSize="16" Height="auto" MouseLeftButtonDown="click_MouseLeftButtonDown"/>
            <TextBlock x:Name="url" Margin="5,0,5,0" TextWrapping="Wrap" FontSize="12" Height="auto" MouseLeftButtonDown="click_MouseLeftButtonDown" Foreground="Gray"/>
        </StackPanel>
    </Grid>
</UserControl>
