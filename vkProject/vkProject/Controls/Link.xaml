<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkAPI.Controls"
             xmlns:Controls="clr-namespace:VkAPI.Controls" x:Class="VkAPI.Controls.ctrLink"
             mc:Ignorable="d" 
             Height="auto" MinWidth="380">
    <StackPanel Margin="0, 0, 0, 0">
        <StackPanel x:Name="photo" Margin="0,5,0,0" Height="auto" Width="auto" MouseLeftButtonDown="click_MouseLeftButtonDown"></StackPanel>
        <TextBlock x:Name="title" Text="" Margin="5,0,5,3" TextWrapping="Wrap" FontSize="17" Height="auto" MouseLeftButtonDown="click_MouseLeftButtonDown"></TextBlock>
        <TextBlock x:Name="description" Text="" Margin="5,0,5,0" TextWrapping="Wrap" FontSize="12" Height="auto" MouseLeftButtonDown="click_MouseLeftButtonDown"></TextBlock>
    </StackPanel>
</UserControl>
