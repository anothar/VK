<UserControl x:Class="vkProject.Controls.HoverButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vkProject.Controls"
             mc:Ignorable="d"
             Width="200" Height="30">
    <Grid Background="White">
        <Grid.Clip>
            <RectangleGeometry RadiusX="15" RadiusY="15" Rect="0, 0, 200, 30"/>
        </Grid.Clip>
        <TextBlock x:Name="text" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="#F0AF"/>
    </Grid>
</UserControl>
