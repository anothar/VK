<UserControl x:Class="VkAPI.Controls.ctrTabElement"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkAPI.Controls"
             mc:Ignorable="d" x:Name="tab"
             Height="50" Width="auto" Background="LightGray" BorderBrush="Gray" BorderThickness="1">
    <Grid>
        <TextBlock x:Name="text" VerticalAlignment="Center" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Justify" Foreground="Gray"/>
    </Grid>
</UserControl>
