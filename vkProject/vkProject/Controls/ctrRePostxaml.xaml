<UserControl x:Class="vkProject.Controls.ctrRePostxaml"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:vkProject.Controls"
             mc:Ignorable="d" 
             Width="auto" Height="auto">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Fill="Gray"/>
        <StackPanel Grid.Column="1" x:Name="wall" Margin="10, 10, 10, 10">
            <TextBlock Margin="5, 5, 5, 5" TextWrapping="Wrap" x:Name="text"/>
        </StackPanel>
    </Grid>
</UserControl>
