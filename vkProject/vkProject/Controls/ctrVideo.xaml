<UserControl x:Class="VkAPI.Controls.ctrVideo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkAPI.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <WebBrowser x:Name="webPlayer" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
        <StackPanel VerticalAlignment="Top">
            <Label x:Name="title" />
            <Label x:Name="views" HorizontalAlignment="Left"/>
        </StackPanel>
        <TextBlock x:Name="description" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
    </Grid>
</UserControl>
