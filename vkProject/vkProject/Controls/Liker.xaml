<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VkAPI.Controls"
             xmlns:Controls="clr-namespace:VkAPI.Controls" x:Class="VkAPI.Controls.ctrLiker"
             mc:Ignorable="d" 
             Height="50" MinWidth="380" Margin="5">
    <Grid MouseLeftButtonUp="Grid_MouseLeftButtonUp">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Image x:Name="user_ico" Width="50" Height="50">
            <Image.Clip>
                <RectangleGeometry RadiusX="25" RadiusY="25" Rect="0,0,50,50"/>
            </Image.Clip>
        </Image>
        <TextBlock Grid.Column="1" x:Name="name" VerticalAlignment="Center" TextAlignment="Left" MouseLeftButtonUp="Grid_MouseLeftButtonUp" Margin="5"></TextBlock>
    </Grid>
</UserControl>
